<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/conf_customize_second">

        <SwitchPreference
            android:defaultValue="true"
            android:key="confShowSecond"
            android:title="@string/conf_show_second" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="confEnableSubSecond"
            android:title="@string/conf_enable_subsecond" />

        <SwitchPreference
            android:defaultValue="true"
            android:key="confEnableSecondSmoothly"
            android:title="@string/conf_enable_second_smoothly" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/conf_theme" >

        <ListPreference
            android:defaultValue="1"
            android:entries="@array/reply_entries"
            android:entryValues="@array/reply_values"
            android:key="confPresetTheme"
            android:title="@string/conf_preset_theme"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="confEnableCustomTheme"
            android:title="@string/conf_enable_custom_theme" />

        <net.zuntan.svgclock_ad.CustomEditTextPreference
            android:key="confCustomThemeLocation"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/conf_custom_theme_location"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>